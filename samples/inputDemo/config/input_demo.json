{
   "app":{
      "name":"InputSample",
      "author":"Nau Engine",
      "version":"0.0.1",
      "log":{
         "files":[
            "$folder{LocalAppData}/nau/${app/name}/logs/log"
         ]
      },
      "vfs":{
         "mounts":[
            {
               "mountPoint":"/input",
               "path":"${sampleProjectDir}/content",
               "readOnly":true
            },
            {
               "mountPoint":"/content",
               "path":"$sampleDir{sceneBase}/content"
            },
            {
               "mountPoint":"/res",
               "path":"$sampleDir{sceneBase}/resources"
            }
         ]
      }
   }
}