{
   "app":{
      "vfs":{
         "mounts":[
            {
               "mountPoint":"/content",
               "path":"${sampleProjectDir}/content",
               "enabled":true
            },
            {
               "mountPoint":"/assets_db",
               "path":"${sampleProjectDir}/assets_database",
               "isOptional":true
            },
            {
               "mountPoint":"/res",
               "path":"${sampleProjectDir}/resources",
               "enabled":true,
               "isOptional":true
            },
            {
               "mountPoint":"/content",
               "path":"${sampleProjectDir}/content.packs/content.nau_pack",
               "enabled":false
            },
            {
               "mountPoint":"/app/data",
               "path":"$folder{LocalAppData}/nau/${app/name}/data",
               "forceCreate":true,
               "readOnly":false,
               "enabled":false
            },
            {
               "mountPoint":"/user/docs",
               "path":"$folder{UserDocuments}/nau/${app/name}",
               "forceCreate":true,
               "readOnly":false,
               "enabled":false
            }
         ]
      },
      "asset_db":{
         "mounts":[
            {
               "kind":"asset_db",
               "entryPoint":"assets_db/database.db"
            }
         ]
      }
   }
}